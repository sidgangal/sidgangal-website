---
interface Props {
  text?: string;
}

const { text } = Astro.props;

const defaultText = "I built a company for seven years, sold it, and learned that the same principles that grow startups also grow wealth and health. This is where I write about all threeâ€”and how they compound together.";

// Split text into paragraphs (by double newlines or single newlines)
const paragraphs = (text || defaultText).split(/\n\n|\n/).filter(p => p.trim());
---

<section class="mb-12 pb-10 border-b-[2.5px]" style="border-color: var(--color-border-light);">
  {paragraphs.map((paragraph) => (
    <p class="text-lg leading-relaxed mb-4 last:mb-0" style="color: var(--color-ink-light);">
      {paragraph.trim()}
    </p>
  ))}
</section>
