    {import.meta.env.PUBLIC_POSTHOG_KEY && (
      <script define:vars={{ posthogKey: import.meta.env.PUBLIC_POSTHOG_KEY, posthogHost: import.meta.env.PUBLIC_POSTHOG_HOST || 'https://us.i.posthog.com' }}>
